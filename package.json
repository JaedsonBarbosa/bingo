    "@parcel/transformer-webmanifest": "^2.0.0-rc.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-rc.0",
    "posthtml-include": "^1.7.1",
    "workbox-cli": "^6.2.0"
  },
  "dependencies": {
    "@pwabuilder/pwainstall": "^1.6.7",
    "alpinejs": "^3.2.3",
    "firebase": "^8.9.0",
